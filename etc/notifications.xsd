<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
    <xs:element name="config" type="configType"></xs:element>

    <xs:complexType name="configType">
        <xs:sequence>
            <xs:element type="releasesType" name="releases" maxOccurs="1" minOccurs="1"/>
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="releasesType">
        <xs:sequence>
            <xs:element type="releaseType" name="release" maxOccurs="unbounded" minOccurs="0"/>
        </xs:sequence>
        <xs:attribute type="xs:string" name="group" use="required"/>
    </xs:complexType>

    <xs:complexType name="releaseType">
        <xs:sequence>
            <xs:element type="notificationsType" name="notifications" maxOccurs="1" minOccurs="1"/>
        </xs:sequence>
        <xs:attribute type="xs:string" name="version" use="required"/>
        <xs:attribute type="xs:string" name="tag" use="optional"/>
    </xs:complexType>

    <xs:complexType name="notificationsType">
        <xs:sequence>
            <xs:element type="notificationType" name="notification" maxOccurs="unbounded" minOccurs="0"/>
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="notificationType">
        <xs:all>
            <xs:element name="title" type="translatableType" maxOccurs="1" minOccurs="1"/>
            <xs:element name="description" type="translatableType" maxOccurs="1" minOccurs="1"/>
        </xs:all>
        <xs:attribute type="xs:int" name="index" use="required"/>
        <xs:attribute type="xs:string" name="severity" use="optional"/>
    </xs:complexType>

    <xs:complexType name="translatableType">
        <xs:simpleContent>
            <xs:extension base="xs:string">
                <xs:attribute name="translate" use="optional" fixed="true" type="xs:boolean"/>
            </xs:extension>
        </xs:simpleContent>
    </xs:complexType>
</xs:schema>
